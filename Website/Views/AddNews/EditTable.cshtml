@model Website.Models.WebSiteBD.NewsTable

@{
    ViewData["Title"] = "EditTable";
}
<section id="news" style="padding: 80px 15px 80px 15px;">
    <div class="container">
        <div class="col-md-12">
            <h4>График новостей</h4>
            <hr />
            <form asp-action="EditTable">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DateTime" class="control-label">Дата, время проведения</label>
                    @Html.TextAreaFor(x => x.DateTime, new { @id = "dateTime", @class = "form-control", @required = "required", @style = "min-width: 100%; width: 100%; max-width: 100%; min-height: 60px" })
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Тема дня информирования</label>
                    @Html.TextAreaFor(x => x.Name, new { @class = "form-control", @required = "required", @style = "min-width: 100%; width: 100%; max-width: 100%; min-height: 60px;" })
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Executor" class="control-label">Ответственный исполнитель</label>
                    @Html.TextAreaFor(x => x.Executor, new { @class = "form-control;", @required = "required", @style = "min-width: 100%; width: 100%; max-width: 100%; min-height: 60px;" })
                    <span asp-validation-for="Executor" class="text-danger"></span>
                </div>
                <div class="panel-footer">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    @Html.ActionLink("Вернуться к списку", "NewsTable", null, new { @class = "btn btn-default" })
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    $(function(){
        $("#dateTime").mask("99.99.9999 99.99-99.99");
});

</script>